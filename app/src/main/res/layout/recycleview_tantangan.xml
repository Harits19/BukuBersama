<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bukuLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".PeminjamanActivity.PinjamBukuActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:elevation="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="100dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_imageview"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@drawable/ic_profile" />

            <TextView
                android:id="@+id/judulTantangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile_imageview"
                android:layout_toRightOf="@id/profile_imageview"
                android:maxLines="2"
                android:padding="10dp"
                android:text="Baca Buku Selama 30 Menit"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@color/colorPrimary"
                android:shadowColor="#3A559F"
                android:text="Terima"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>