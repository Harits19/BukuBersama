<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bukuLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".PinjamBukuActivity">

    <RelativeLayout
        android:id="@+id/cardview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="5dp"
        android:background="@drawable/layout_round_corner_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/buku2" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#6F000000" />

                </FrameLayout>

                <ImageView
                    android:id="@+id/buku1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/buku2" />

            </RelativeLayout>


            <TextView
                android:id="@+id/judulBuku"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/relative1"
                android:maxLines="2"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:text="Hujan Tere Liye Gramedia"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/biaya"
                fontPath="fonts/helvetica_bold.ttf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/judulBuku"
                android:layout_toRightOf="@id/relative1"
                android:maxLines="2"
                android:padding="5dp"
                android:paddingTop="10dp"

                android:text="Rp. 5000,-"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/biaya"
                android:layout_toRightOf="@id/relative1"
                android:maxLines="2"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:text="Belum dikembalikan"
                android:textColor="#929292"
                android:textSize="15sp" />


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>