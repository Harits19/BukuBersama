<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bukuLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PinjamBukuActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/roundedImageView"
            android:layout_width="320dp"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/berita1" />

        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="170dp"
            android:background="@drawable/layout_round_corner_bg_gradient">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/judulBerita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/ringkasanberita"
                    android:maxLines="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="0dp"
                    android:text="Buku anatomi yang dibuat Nazi berdasarkan jenazah ratusan korban pembunuhan masih dipakai ahli bedah"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/ringkasanberita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:maxLines="2"
                    android:minLines="2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingBottom="5dp"
                    android:text="Buku anatomi yang dibuat Nazi berdasarkan jenazah ratusan korban pembunuhan masih dipakai ahli bedah"
                    android:textColor="@color/colorWhite"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:background="#D5FFFFFF"
                    android:text="Baca"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="12sp" />
            </RelativeLayout>
        </FrameLayout>

    </android.support.v7.widget.CardView>
    <View
        android:layout_width="320dp"
        android:layout_height="1dp"
        android:layout_below="@id/cardview1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="#f0f0f0" />

</RelativeLayout>