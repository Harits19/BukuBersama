<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/layout_round_corner_bg"
        >


        <Button
            android:id="@+id/editDetailBukuButton2"
            style="@style/CustomButton1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:elevation="1dp"
            android:text="Bayar"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/penulis3"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="165dp"
            android:layout_height="240dp"
            android:padding="8dp"
            android:src="@drawable/buku1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/judulBuku"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLines="3"
            android:text="Hujan"
            android:textColor="#000"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/penulis"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulBuku"
            android:text="By Tere Liye"
            android:textColor="#87BFC9"
            android:textSize="15sp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/judulBuku"
            app:layout_constraintTop_toBottomOf="@+id/judulBuku" />

        <!--87BFC9-->

        <TextView
            android:id="@+id/penulis2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulBuku"
            android:layout_marginTop="8dp"
            android:text="SUBTOTAL"
            android:textColor="#87BFC9"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/line2"
            app:layout_constraintTop_toBottomOf="@+id/line2" />

        <TextView
            android:id="@+id/penulis4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulBuku"
            android:layout_marginStart="16dp"
            android:text="TOTAL"
            android:textColor="#87BFC9"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/penulis2"
            app:layout_constraintTop_toTopOf="@+id/penulis2" />

        <TextView
            android:id="@+id/penulis3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulBuku"
            android:text="Rp 75.000,-"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/penulis6"
            app:layout_constraintTop_toBottomOf="@+id/penulis6" />

        <TextView
            android:id="@+id/penulis5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulBuku"
            android:text="Rp 81.000,-"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/penulis4"
            app:layout_constraintTop_toBottomOf="@+id/penulis4" />

        <TextView
            android:id="@+id/penulis6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulBuku"
            android:text="Rp 6.000,-"
            android:textColor="#000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/penulis2"
            app:layout_constraintTop_toBottomOf="@+id/penulis2" />

        <View
            android:id="@+id/line"
            android:layout_width="170dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#f0f0f0"
            app:layout_constraintStart_toStartOf="@+id/penulis"
            app:layout_constraintTop_toBottomOf="@+id/penulis" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#f0f0f0"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/sinopsis"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:text="Rp 3.000,-/Hari"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/line"
            app:layout_constraintTop_toBottomOf="@+id/line" />


        <FrameLayout
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/sinopsis"
            app:layout_constraintTop_toBottomOf="@+id/sinopsis">

            <android.support.v7.widget.CardView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ECFCFF"
                    android:hint="2"
                    android:inputType="textPassword"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>

            <Button
                style="@style/CustomButton2"

                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_gravity="right"
                android:text="+"

                android:textSize="10sp" />

            <Button
                style="@style/CustomButton2"

                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:layout_gravity="left"
                android:text="-"

                android:textSize="10sp" />


        </FrameLayout>


    </android.support.constraint.ConstraintLayout>


</RelativeLayout>