<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PinjamBukuActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <FrameLayout
        android:id="@+id/framelayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp">


        <EditText

            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/layout_round_corner_bg"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:hint="Search..."
            android:padding="8dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="#87BFC9"
            android:textSize="15sp" />


        <ImageButton
            style="@style/CustomButton2"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:src="@drawable/ic_search_black_24dp" />

    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        style="@style/AllCapsFalse"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/framelayout1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/tab_layout_background"
        app:tabBackground="@drawable/tab_layout_selector"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabRippleColor="@null"
        app:tabSelectedTextColor="@color/colorPrimaryDark"
        app:tabTextAppearance="@style/TabTextAppearance" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabLayout"
        android:layout_centerHorizontal="true">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingBottom="8dp">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_round_corner_bg"
                    android:elevation="5dp">

                    <FrameLayout
                        android:layout_width="165dp"
                        android:layout_height="240dp"
                        android:padding="8dp"
                        android:id="@+id/buku1"
                        android:scaleType="centerCrop"
                        android:src="@drawable/buku1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                       android:src="@drawable/buku1"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/judulBuku"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Hujan"
                        android:maxLines="3"
                        android:textColor="#000"
                        android:textSize="30sp"
                        app:layout_constraintStart_toStartOf="@+id/penulis"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/penulis"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/judulBuku"
                        android:layout_marginTop="8dp"
                        android:text="By Tere Liye"
                        android:textColor="#87BFC9"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        app:layout_constraintStart_toStartOf="@+id/line"
                        app:layout_constraintTop_toBottomOf="@+id/judulBuku" />

                    <!--87BFC9-->

                    <View
                        android:id="@+id/line"
                        android:layout_width="150dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#f0f0f0"
                        app:layout_constraintStart_toStartOf="@+id/sinopsis"
                        app:layout_constraintTop_toBottomOf="@+id/penulis" />

                    <TextView
                        android:id="@+id/sinopsis"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Rp 3.000,-/Hari"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/pinjamButton"
                        app:layout_constraintTop_toBottomOf="@+id/line" />

                    <Button
                        android:id="@+id/pinjamButton"
                        style="@style/CustomButton2"
                        android:layout_width="150dp"
                        android:layout_height="36dp"
                        android:onClick="ShowPopup"
                        android:layout_marginBottom="8dp"
                        android:text="Pinjam"
                        android:textAllCaps="false"
                        android:textSize="15dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/buku1" />

                </android.support.constraint.ConstraintLayout>
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>


</RelativeLayout>