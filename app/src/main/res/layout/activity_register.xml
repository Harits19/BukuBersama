<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    >

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:padding="10dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_below="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:paddingTop="30dp"
            android:text="Lengkapi data dirimu di bawah ini ya"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="Nama Lengkap"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/colorWhite"
            android:hint="Cth: John Snow"
            android:textColorHint="@color/colorGrey"
            android:textSize="20dp"
            android:textStyle="bold" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorGrey"
            app:layout_constraintStart_toStartOf="@+id/penulis"
            app:layout_constraintTop_toBottomOf="@+id/penulis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="Email"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cth: John@gmail.com"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColorHint="@color/colorGrey"

            android:background="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorGrey"
            app:layout_constraintStart_toStartOf="@+id/penulis"
            app:layout_constraintTop_toBottomOf="@+id/penulis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:textColor="#000"
            android:textSize="10dp"
            android:textStyle="bold"
            android:text="Nomor HP"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Cth: 083840493135"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColorHint="@color/colorGrey"
            android:background="@color/colorWhite"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorGrey"
            app:layout_constraintStart_toStartOf="@+id/penulis"
            app:layout_constraintTop_toBottomOf="@+id/penulis" />

    </LinearLayout>

    <Button
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:text="Lanjut"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_margin="-10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>