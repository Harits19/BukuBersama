<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PesanActivity.PesanActivity">

    <TextView
        android:id="@+id/textView_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/colorWhite"
        android:layout_marginBottom="20dp"

        android:text="Pesan"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />


    <FrameLayout
        android:id="@+id/framelayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp">


        <EditText

            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/layout_round_corner_bg"
            android:hint="Tulis Pesan"
            android:padding="8dp"
            android:textSize="15sp" />


        <ImageButton
            style="@style/CustomButton1"
            android:layout_width="40dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:src="@drawable/ic_search_black_24dp" />

    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/isiPesan_textView2"
            android:layout_toRightOf="@id/waktuPengiriman_textView2"
            android:scaleType="centerInside"
            android:src="@drawable/ic_check_black_24dp" />

        <TextView
            android:id="@+id/waktuPengiriman_textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/isiPesan_textView2"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="20.02"
            android:textColor="@color/colorGrey"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/isiPesan_textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:padding="10dp"
            android:text="Bukunya apakah ready gan ?"
            android:textColor="#000"
            android:textSize="15dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/textView_top"
        android:id="@+id/relative1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/isiPesan_textView"
            android:layout_toLeftOf="@id/waktuPengiriman_textView"
            android:scaleType="centerInside"
            android:src="@drawable/ic_check_black_24dp" />

        <TextView
            android:id="@+id/waktuPengiriman_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/isiPesan_textView"
            android:layout_alignParentRight="true"
            android:padding="5dp"
            android:text="20.02"
            android:textColor="@color/colorGrey"
            android:textSize="15sp" />

        <TextView
            android:background="@color/colorAccent"
            android:id="@+id/isiPesan_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Bukunya apakah ready gan ?"
            android:textColor="@color/colorWhite"
            android:textSize="15dp" />


    </RelativeLayout>

</RelativeLayout>