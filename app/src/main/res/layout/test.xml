<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bukuLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".PinjamBukuActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview1"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative1"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingBottom="10dp"
                                android:text="Hujan - TereLiye Gramedia"
                                android:textColor="#000"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingBottom="1dp"
                                android:text="Rp. 3000,-"
                                android:textColor="@color/colorHighlight"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:paddingBottom="1dp"
                                android:text="Terpinjam 10"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:maxLines="2"
                                android:paddingBottom="1dp"
                                android:text="Harits"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:maxLines="2"
                                android:paddingBottom="1dp"
                                android:text="Lowokwaru"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/relative1"
                            android:layout_width="160dp"
                            android:layout_height="150dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/buku2" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#6F000000" />

                            </FrameLayout>

                            <ImageView
                                android:id="@+id/buku1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/buku2" />

                        </RelativeLayout>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview2"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/cardview1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/relative2"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingBottom="10dp"
                                android:text="Hujan - TereLiye Gramedia"
                                android:textColor="#000"
                                android:textSize="20sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:paddingBottom="1dp"
                                android:text="Rp. 3000,-"
                                android:textColor="@color/colorHighlight"
                                android:textSize="15sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:paddingBottom="1dp"
                                android:text="Terpinjam 10"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:maxLines="2"
                                android:paddingBottom="1dp"
                                android:text="Harits"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="end"
                                android:maxLines="2"
                                android:paddingBottom="1dp"
                                android:text="Lowokwaru"
                                android:textColor="#9B9B9B"
                                android:textSize="12sp" />


                        </LinearLayout>

                        <RelativeLayout
                            android:id="@+id/relative2"
                            android:layout_width="160dp"
                            android:layout_height="150dp">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/buku2" />

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#6F000000" />

                            </FrameLayout>

                            <ImageView
                                android:id="@+id/buku2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="16dp"
                                android:scaleType="centerInside"
                                android:src="@drawable/buku2" />

                        </RelativeLayout>

                    </RelativeLayout>


                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>

